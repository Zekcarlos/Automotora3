@model IEnumerable<Automotora3.Models.Clientes>

@{
    ViewData["Title"] = "Index";
}

<h1>Bienvenido Ahora Puedes Agregar Nuevos Usuarios</h1>

<p>
    <a asp-action="Create">NuevoUsuarios</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Rut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FenchaNacimiento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Rut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FenchaNacimiento)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="text-white"><button type="button" class="btn btn-warning">Editar</button></a>
                <a asp-action="Details" asp-route-id="@item.Id" class="text-white"><button type="button" class="btn btn-warning">Detalles</button></a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="text-white"><button type="button" class="btn btn-danger">Borrar</button></a>
            </td>
        </tr>
}
    </tbody>
</table>
