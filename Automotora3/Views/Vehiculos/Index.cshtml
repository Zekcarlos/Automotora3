@model IEnumerable<Automotora3.Models.Vehiculos>

@{
    ViewData["Title"] = "Index";
}

<h1>Bienvenido Ahora Puedes Agregar Nuevos Vehiculos</h1>

<p>
    <a asp-action="Create">NuevoVehiculo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Año)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Modelo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Año)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="text-white"><button type="button" class="btn btn-warning">Editar</button></a>
                <a asp-action="Details" asp-route-id="@item.Id" class="text-white"><button type="button" class="btn btn-warning">Detalles</button></a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="text-white"><button type="button" class="btn btn-danger">Borrar</button></a>
            </td>
        </tr>
}
    </tbody>
</table>
